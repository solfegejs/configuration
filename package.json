{
    "name": "solfegejs-configuration",
    "description": "SolfegeJS configuration",
    "version": "2.2.0",
    "author": "neolao <contact@neolao.com>",
    "repository": "https://github.com/neolao/solfege-bundle-configuration.git",
    "license": "MIT",
    "main": "lib/Bundle.js",
    "files": [
        "lib",
        "src"
    ],
    "engines": {
        "node": ">= 9"
    },
    "dependencies": {},
    "devDependencies": {
        "solfegejs-application": "~3.0",
        "babel-cli": "^6.7",
        "babel-preset-solfege": "^1.0",
        "eslint": "^3.19",
        "eslint-plugin-solfege": "^1.0",
        "chai": "^3.5",
        "co-mocha": "^1.2",
        "coveralls": "^2.13.1",
        "flow-bin": "^0.60.1",
        "jsdoc": "^3.4",
        "mocha": "^3.3",
        "nyc": "^10.3.2",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop; flow start",
        "prepare": "npm run build && npm run test",
        "lint": "eslint --ext .js src",
        "test": "mocha --harmony --compilers js:babel-core/register --require co-mocha --recursive --reporter spec --bail",
        "prebuild": "npm run lint && flow",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build --silent' ./src",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-console": "node example/lib/console.js"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false,
        "plugins": []
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
